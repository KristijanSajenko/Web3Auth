{
  "name": "@web3auth/evm-adapter-factory",
  "version": "0.1.1",
  "description": "Factory for adding/configuring adapters for web3auth",
  "keywords": [
    "web3Auth/evm-adapter-factory",
    "web3Auth",
    "multichainWallet",
    "blockchain",
    "ethereum",
    "solana"
  ],
  "main": "dist/evmAdapterFactory.cjs.js",
  "module": "dist/evmAdapterFactory.esm.js",
  "unpkg": "dist/evmAdapterFactory.umd.min.js",
  "jsdelivr": "dist/evmAdapterFactory.umd.min.js",
  "types": "dist/types/index.d.ts",
  "author": "Torus Labs",
  "homepage": "https://github.com/Web3Auth/Web3Auth/tree/main/packages/evm-adapter-factory#readme",
  "license": "ISC",
  "scripts": {
    "local-publish": "yalc publish",
    "test": "mocha --config ../../.mocharc.json test/**.ts",
    "test-debugger": "mocha --config ../../.mocharc.json --inspect-brk test/**.ts",
    "dev": "rimraf dist/ && cross-env NODE_ENV=development torus-scripts build",
    "build": "rimraf dist/ && cross-env NODE_ENV=production torus-scripts build",
    "lint": "eslint --fix 'src/**/*.ts'",
    "prepack": "yarn run build",
    "pre-commit": "lint-staged"
  },
  "files": [
    "dist",
    "src"
  ],
  "devDependencies": {
    "lint-staged": "^12.1.7",
    "@toruslabs/openlogin": "^1.3.4",
    "@types/lodash.clonedeep": "^4.5.6"
  },
  "dependencies": {
    "@web3auth/base": "^0.1.1",
    "@web3auth/metamask-adapter": "^0.1.1",
    "@web3auth/openlogin-adapter": "^0.1.1",
    "@web3auth/torus-evm-adapter": "^0.1.1",
    "@web3auth/wallet-connect-v1-adapter": "^0.1.1",
    "lodash.clonedeep": "^4.5.0",
    "loglevel": "^1.8.0"
  },
  "lint-staged": {
    "!(*d).ts": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Web3Auth/Web3Auth.git"
  },
  "bugs": {
    "url": "https://github.com/Web3Auth/Web3Auth/issues"
  }
}
