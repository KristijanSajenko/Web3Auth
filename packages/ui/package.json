{
  "name": "@web3auth/ui",
  "version": "0.2.3",
  "description": "Ui modal for web3Auth",
  "keywords": [
    "web3Auth/ui",
    "web3Auth",
    "multichainWallet",
    "blockchain",
    "ethereum",
    "solana"
  ],
  "main": "dist/ui.cjs.js",
  "module": "dist/ui.esm.js",
  "unpkg": "dist/ui.umd.min.js",
  "jsdelivr": "dist/ui.umd.min.js",
  "types": "dist/types/src/index.d.ts",
  "author": "Torus Labs",
  "homepage": "https://github.com/Web3Auth/Web3Auth/tree/main/packages/ui#readme",
  "license": "ISC",
  "scripts": {
    "local-publish": "yalc publish",
    "test": "mocha --config ../../.mocharc.json test/**.ts",
    "test-debugger": "mocha --config ../../.mocharc.json --inspect-brk test/**.ts",
    "dev": "rimraf dist/ && cross-env NODE_ENV=development torus-scripts build",
    "build": "rimraf dist/ && cross-env NODE_ENV=production torus-scripts build",
    "start": "rimraf dist/ && cross-env NODE_ENV=production torus-scripts start",
    "lint": "eslint --fix 'src/**/*.ts'",
    "prepack": "yarn run build",
    "pre-commit": "lint-staged",
    "serve:ui": "live-server public/",
    "start:ui": "watch 'yarn run dev && bash startTestApp.sh' ./src"
  },
  "files": [
    "dist",
    "src"
  ],
  "devDependencies": {
    "@typescript-eslint/parser": "^5.10.1",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/webpack-env": "1.16.3",
    "acorn-jsx": "^5.3.2",
    "css-loader": "^5.2.7",
    "file-loader": "^6.2.0",
    "lint-staged": "^12.1.7",
    "postcss": "^8.4.5",
    "rollup-plugin-postcss": "^4.0.2",
    "style-loader": "^2.0.0",
    "url-loader":"^4.1.1",
    "@svgr/rollup":"^6.2.1",
    "rollup-plugin-url": "^3.0.1",
    "@svgr/webpack": "^5.5.0",
    "watch": "^1.0.2",
    "live-server": "^1.2.1",
    "eslint-plugin-react-hooks":"^4.3.0",
    "eslint-config-airbnb":"^19.0.4",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "ts-loader": "^8.0.2"
  },
  "dependencies": {
    "@toruslabs/openlogin-jrpc": "^1.3.3",
    "@web3auth/base": "^0.2.2",
    "classnames": "^2.3.1",
    "loglevel": "^1.8.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-qr-code":"^2.0.3",
    "deepmerge":"^4.2.2"
  },
  "lint-staged": {
    "!(*d).ts": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Web3Auth/Web3Auth.git"
  },
  "bugs": {
    "url": "https://github.com/Web3Auth/Web3Auth/issues"
  }
}
